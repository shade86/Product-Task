<Window x:Class="Product_Task.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product_Task"
        mc:Ignorable="d"
        Title="LoginWindow" Height="169.748" Width="300">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Height="27" Margin="10,20,0,0" VerticalAlignment="Top" Width="113"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="27" Margin="10,52,0,0" VerticalAlignment="Top" Width="113"/>
        <TextBox x:Name="UserNameTextBox" HorizontalAlignment="Left" Height="27" Margin="128,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
        <Button Content="Login" HorizontalAlignment="Left" Height="25" Margin="103,94,0,0" VerticalAlignment="Top" Width="86" Click="LoginClick"/>
        <PasswordBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="19" Margin="128,52,0,0" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
